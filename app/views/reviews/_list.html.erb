<% if @reviews.count == 0 %>
	<div>
		<center>
			<h4>There are no reviews yet</h4>
		</center>
	</div>
<% else %>
	<% @reviews.order('id desc').each do |r| %>
		<div class="panel-body">
			<div class="col-md-2">
				<%= image_tag get_avatar_url(r.user), class: "img-circle img-responsive img-user-avatar" %>
			</div>
			<div class="col-md-7">
				<p>
					<strong>
						<%= r.user.fullname %> &nbsp;
						<span id="stars_<%= r.id %>"></span>
					</strong>
				</p>
				<p>
					<%= r.comment %>
				</p>
			</div>
			<div class="col-md-3 pull-right">
				<%= r.created_at.strftime('%b %d, %Y') %> <br />
				<%= link_to "Remove my review", [@service, r], method: :delete, data: {confirm: "Are you sure"} if current_user && current_user == r.user %>
			</div>
		</div>
		<script>
		$('#stars_<%= r.id %>').raty({
			path: '/assets',
			readOnly: true,
			score: <%= r.star %>
		})
		</script>
<% end %>
<% end %>